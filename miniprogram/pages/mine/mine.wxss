.header {
  width: 100%;
  height: 600rpx;
  display: flex;
  box-sizing: border-box;
  background-color: red;
  background-size: cover;
}

.thumb {
  height: 140rpx;
  width: 140rpx;
  margin: 50rpx 0 0 50rpx;
  border-radius: 50%;
  overflow: hidden;
}

.nickname {
  font-size: 14px;
  color: white;
  margin-left: 50rpx;
  margin-top: 80rpx;
}

.dynamic_item {
  width: 97vw;
  height: 180rpx;
  margin: 0 auto;
  border: 1px solid rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  margin-top: 10rpx;
  box-shadow: 2px 2px 5px rgb(95, 94, 94);
  position: relative;
}
.dynamic_item.active{
  height: 260rpx;
}
.flag{
  width: 16rpx;
  height: 16rpx;
  background-color: rgba(80, 210, 194, 100);
  border-radius: 50%;
  position: absolute;
  top: 58rpx;
  left: 50rpx;
}
.flag.active{
  background-color: rgba(252, 171, 83, 100);
}
.title{
  position: absolute;
  top: 58rpx;
  left: 110rpx;
  font-size: 13px;
  font-weight: 600;
}
.date{
  font-size: 12px;
  position: absolute;
  top: 116rpx;
  left: 110rpx;
  color: #996;
}
.like_Account , .unit{
  font-size: 23px;
  position: absolute;
  top: 90rpx;
  transform: translateY(-50%);
  right: 60rpx;
}
.commentators{
  position: absolute;
  bottom: 40rpx;
  left: 110rpx;
  display: flex;
  flex-direction:row; 
}
.Portrait{
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 20rpx;
}
.unit{
  top: 130rpx;
  font-size: 10px;
  color: #996;
}
