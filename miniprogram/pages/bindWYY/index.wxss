/* miniprogram/pages/bindWYY/index.wxss */
.main{
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: #faf4f4;
}
.formbox{
    margin: 20rpx 0;
    width: 100%;
}
.formbox form{
    width: 100%;
}
.section{
    flex: 1;
    width: 100%;
    border-bottom: 1px solid #f4f4f4;
}
.section:last-child{
    border-bottom: none;
    margin-bottom: 40rpx;
}
.section input{
    width: 100%;
    padding: 20rpx;
    background-color: #fff;
    font-size: 30rpx;
}
.phone-placeholder{
    font-size: 30rpx;
}
.btn-area{
    width: 100%;
}
.btn-area button{
    width: 86%;
    margin: 0 auto;
}
